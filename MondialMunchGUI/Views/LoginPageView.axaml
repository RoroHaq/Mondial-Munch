<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MondialMunchGUI.ViewModels"
             x:DataType="vm:LoginPageViewModel"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
             x:Class="MondialMunchGUI.Views.LoginPageView">
  <StackPanel VerticalAlignment="Center"
              HorizontalAlignment="Center">
    <Border BorderBrush="White" BorderThickness="5">
      <StackPanel>
        <StackPanel HorizontalAlignment="Center">
          <TextBlock FontSize="24" Foreground="Black">Login</TextBlock>
        </StackPanel>
        <StackPanel Margin="10, 10, 10, 10">
          <StackPanel Margin="15,10,15,10">
            <TextBlock>Username</TextBlock>
            <TextBox AcceptsReturn="True"
                    Text="{Binding Username}"
                    Watermark="Enter your username"/>
          </StackPanel>

          <StackPanel>
            <TextBlock>Login</TextBlock>
            <TextBox AcceptsReturn="True"
                    Text="{Binding Password}"
                    PasswordChar="*"
                    Watermark="Enter your password"/>
          </StackPanel>
          <StackPanel>
            <Button DockPanel.Dock="Bottom"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    x:CompileBindings="False"
                    Command="{Binding Login}">
                Login
            </Button>
            <Button DockPanel.Dock="Bottom"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    x:CompileBindings="False"
                    Command="{Binding Register}">
                Register
            </Button>
              <StackPanel.Styles>
                <Style Selector="Button">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
                <Style Selector="TextBlock">
                    <Setter Property="Opacity" Value="1"/>
                </Style>
              </StackPanel.Styles>
          </StackPanel>
        </StackPanel>

        <StackPanel.Styles>
                <Style Selector="StackPanel">
                    <Setter Property="Background" Value="White"/>
                </Style>
        </StackPanel.Styles>
      </StackPanel>
    </Border>
    <!-- <ItemsControl ItemsSource="{Binding ListUsers}">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <CheckBox Margin="4"
                    Content="{Binding Name}"/>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl> -->
  </StackPanel>

  <UserControl.Background>
      <ImageBrush Source="/Assets/login-background.jpg"/>
  </UserControl.Background>
</UserControl>
