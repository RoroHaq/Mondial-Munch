<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MondialMunchGUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MondialMunchGUI.Views.HomePageView"
             x:DataType="vm:HomePageViewModel">
    
    <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="Insert Logo Here">
        <MenuItem Header="Home"/>
        <Separator/>
        <MenuItem Header="Favourites"/>
        <Separator/>
        <MenuItem Header="My Recipies"/>
        <Separator/>
        <MenuItem Header="Events:"/>
        <Separator/>
        <MenuItem Header="Followed Countries:"/>
      </MenuItem>
      <MenuItem Header="Logo">
        <MenuItem Header="Profile"/>
        <Separator/>
        <MenuItem Header="Settings"/>
        <Separator/>
        <MenuItem Header="Log Out"/>
      </MenuItem>
    </Menu>
    <TextBlock/>
  </DockPanel>
</UserControl>
